.c-table
  &__row
    display flex
    &:nth-child(odd)
      background-color tint(color-main, 90%)
  &__group
    display flex
    flex 1
    &--width-2
      flex 2
    @media (max-width 48em)
      flex-direction column
  &__cell
    flex 1
    padding space-md
    &--width-2
      flex 2
    &--head
      background-color rgba(color-main, .9)
      color color-white
      cursor pointer
